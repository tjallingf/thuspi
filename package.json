{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3"
  },
  "scripts": {
    "prepare": "husky install",
    "client:lint": "cd client && yarn lint",
    "client:lint-fix": "cd client && yarn lint-fix",
    "lint:server": "eslint server/src/**/*.ts",
    "format:server": "eslint server/src/**/*.ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn client:lint"
    }
  }
}
