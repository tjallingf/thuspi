{
    "include": ["src/", "../shared/types/utils/colors.ts"],
    "compilerOptions": {
        "types": [],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "moduleResolution": "node",
        "target": "es2020",
        "lib": ["es2020"],
        "outDir": "./dist",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitReturns": false,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "rootDir": "../",
        "paths": {
            "~shared/*": ["../shared/*"],
            "~extapi": ["src/zylax/extension-api/index"],
            "@/*": ["src/*"]
        }
    },
    "ts-node": {
        "transpileOnly": true
    }
}
